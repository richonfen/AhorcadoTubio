<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ricardotubio.ahorcadoprueba.JuegaActivity"
    android:id="@+id/layout_juega"
    android:background="#ccf5bb">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4,5,6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow android:measureWithLargestChild="false">
            <Button
                android:id="@+id/txt_a"
                android:text="A"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_width="wrap_content" />
            <Button

                android:id="@+id/txt_b"
                android:text="B"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="1"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_c"
                android:text="C"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="2"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_d"
                android:text="D"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="3"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_e"
                android:text="E"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="4"
                android:layout_weight="1" />

            <Button
                android:id="@+id/txt_f"
                android:text="F"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="5"
                android:layout_weight="1" />

            <Button
                android:id="@+id/txt_g"
                android:text="G"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="6"
                android:layout_weight="1" />

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/txt_h"
                android:text="H"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_i"
                android:text="I"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="1"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_j"
                android:text="J"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="2"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_k"
                android:text="K"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="3"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_l"
                android:text="L"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="4"
                android:layout_weight="1" />

            <Button
                android:id="@+id/txt_m"
                android:text="M"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="5"
                android:layout_weight="1" />

            <Button
                android:id="@+id/txt_n"
                android:text="N"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="6"
                android:layout_weight="1" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/txt_ñ"
                android:text="Ñ"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_o"
                android:text="O"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="1"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_p"
                android:text="P"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="2"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_q"
                android:text="Q"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="3"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_r"
                android:text="R"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="4"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_s"
                android:text="S"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="5"
                android:layout_weight="1" />

            <Button
                android:id="@+id/txt_t"
                android:text="T"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="6"
                android:layout_weight="1" />

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/txt_u"
                android:text="U"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_weight="1" />
            <Button
                android:layout_column="1"
                android:id="@+id/txt_v"
                android:text="V"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_w"
                android:text="W"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="2"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_x"
                android:text="X"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="4"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_y"
                android:text="Y"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="5"
                android:layout_weight="1" />
            <Button
                android:id="@+id/txt_z"
                android:text="Z"
                android:padding="3dip"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_column="6"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PalabraActual"
        android:textSize="30dp"
        android:text="palabraActual"
        android:layout_above="@+id/botonMostrarDibujo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="historial"
        android:id="@+id/historial"
        android:textSize="10dp"
        android:layout_below="@+id/PalabraActual"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Dibujo"
        android:id="@+id/botonMostrarDibujo"
        android:layout_above="@+id/tableLayout" />

    <FrameLayout
        android:id="@+id/fragment_container_dibujo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignRight="@+id/botonMostrarDibujo"
        android:layout_alignEnd="@+id/botonMostrarDibujo"
        android:layout_above="@+id/PalabraActual"
        android:layout_alignParentStart="false"></FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container_fin_partida"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/historial"
        android:layout_alignEnd="@+id/historial"
        android:layout_alignBottom="@+id/fragment_container_dibujo"
        android:layout_toEndOf="@+id/fragment_container_dibujo"
        android:layout_toRightOf="@+id/fragment_container_dibujo"></FrameLayout>

</RelativeLayout>
